---
import Layout from '../layouts/Layout.astro';
import ButtonLink from '@/components/ui/button-link';

export const prerender = false; // Required for server actions

// Get user from middleware
const { user } = Astro.locals;
---

<Layout>
  <div class="container mx-auto px-4 py-8">
    {user ? (
      <div class="max-w-2xl mx-auto">
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
          <h2 class="text-xl font-bold">Welcome back, {user.name || user.email}!</h2>
          <p>You are successfully logged in.</p>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-semibold mb-4">User Information</h3>
          <div class="space-y-2">
            <p><strong>Email:</strong> {user.email}</p>
            {user.name && <p><strong>Name:</strong> {user.name}</p>}
            <p><strong>User ID:</strong> {user.id}</p>
          </div>
          
          <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded">
            <p class="text-sm text-blue-800">
              <strong>ðŸ“… Calendar Access:</strong> You can now view your Google Calendar events in JSON format. 
              If you signed in before calendar access was enabled, you may need to sign out and sign in again.
            </p>
          </div>
          
          <div class="mt-6 space-x-4">
            <ButtonLink href="/calendar">
              View My Calendar
            </ButtonLink>
            <ButtonLink variant="secondary" href="/schedule">
              Schedule Management
            </ButtonLink>
            <ButtonLink variant="destructive" href="/logout">
              Logout
            </ButtonLink>
          </div>
        </div>
      </div>
    ) : (
      <div class="max-w-2xl mx-auto">
        <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded mb-6">
          <h2 class="text-xl font-bold">Welcome to My Random Calendar!</h2>
          <p>Please log in to access your calendar.</p>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="text-center space-y-4">
            <p class="text-gray-600">Get started by creating an account or logging in.</p>
            
            <div class="flex space-x-4 justify-center">
              <ButtonLink href="/login">
                Login
              </ButtonLink>              
              <ButtonLink variant="secondary" href="/register">
                Register
              </ButtonLink>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>

