---
import { actions } from 'astro:actions';
import { handlePeriodicEventsCreatePage } from '../../features/periodic-events/services/page-handler'; 
import Layout from '../../layouts/Layout.astro';

// Handle action results
const result = Astro.getActionResult(actions.periodicEvents.create);

// Handle page logic using service
const pageData = handlePeriodicEventsCreatePage(result);

// Destructure page data
const { formOptions, actionResult } = pageData;
---

<Layout title="Create Periodic Event">
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="mb-4">
          <a 
            href="/periodic-events" 
            class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Periodic Events
          </a>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Create Periodic Event</h1>
        <p class="text-gray-600">
          Define activities you want to do regularly without specifying exact times
        </p>
      </div>

      <!-- Success/Error Messages -->
      {actionResult && !actionResult.error && (
        <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-800">
          <h3 class="font-semibold">Event Created Successfully!</h3>
          <p>Your periodic event "{actionResult.data?.data?.title}" has been created.</p>
          <div class="mt-3">
            <a 
              href="/periodic-events" 
              class="inline-flex items-center text-green-700 hover:text-green-900 font-medium"
            >
              View all periodic events
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      )}
      
      {actionResult?.error && (
        <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-800">
          <h3 class="font-semibold">Error</h3>
          <p>{actionResult.error.message}</p>
        </div>
      )}

      <!-- Form -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <form method="POST" action={actions.periodicEvents.create} class="space-y-6">
          <!-- Title -->
          <div>
            <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
              Activity Title *
            </label>
            <input
              type="text"
              id="title"
              name="title"
              required
              placeholder="e.g., Go to the gym, Walk the dogs, Read books"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <!-- Description -->
          <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
              Description (Optional)
            </label>
            <textarea
              id="description"
              name="description"
              rows="3"
              placeholder="Add more details about this activity..."
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            ></textarea>
          </div>

          <!-- Frequency and Count -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="frequency" class="block text-sm font-medium text-gray-700 mb-2">
                Frequency *
              </label>
              <select
                id="frequency"
                name="frequency"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                {formOptions.frequencyOptions.map(option => (
                  <option value={option.value}>{option.label}</option>
                ))}
              </select>
            </div>

            <div>
              <label for="frequencyCount" class="block text-sm font-medium text-gray-700 mb-2">
                How Many Times *
              </label>
              <input
                type="number"
                id="frequencyCount"
                name="frequencyCount"
                min="1"
                max="31"
                required
                placeholder="3"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              />
              <p class="text-xs text-gray-500 mt-1">e.g., 3 times a week</p>
            </div>
          </div>

          <!-- Duration -->
          <div>
            <label for="duration" class="block text-sm font-medium text-gray-700 mb-2">
              Duration (minutes) *
            </label>
            <input
              type="number"
              id="duration"
              name="duration"
              min="1"
              max="1440"
              required
              placeholder="60"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
            <p class="text-xs text-gray-500 mt-1">e.g., 60 minutes = 1 hour</p>
          </div>

          <!-- Category and Priority -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="category" class="block text-sm font-medium text-gray-700 mb-2">
                Category *
              </label>
              <select
                id="category"
                name="category"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                {formOptions.categoryOptions.map(option => (
                  <option value={option.value}>{option.label}</option>
                ))}
              </select>
            </div>

            <div>
              <label for="priority" class="block text-sm font-medium text-gray-700 mb-2">
                Priority *
              </label>
              <select
                id="priority"
                name="priority"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                {formOptions.priorityOptions.map(option => (
                  <option value={option.value}>{option.label}</option>
                ))}
              </select>
            </div>
          </div>

          <!-- Color -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Color *
            </label>
            <div class="grid grid-cols-6 gap-2">
              {formOptions.colorOptions.map(color => (
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="radio"
                    name="color"
                    value={color.value}
                    class="sr-only"
                    checked={color.value === '#10b981'}
                  />
                  <div class={`w-8 h-8 rounded-full ${color.class} border-2 border-gray-300 hover:border-gray-400`}></div>
                  <span class="text-xs text-gray-600">{color.label}</span>
                </label>
              ))}
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 font-medium"
            >
              Create Periodic Event
            </button>
          </div>
        </form>
      </div>

      <!-- Examples -->
      <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-blue-900 mb-3">Examples</h3>
        <div class="space-y-2 text-sm text-blue-800">
          <p><strong>Exercise:</strong> "Go to the gym" - 3 times a week for 60 minutes</p>
          <p><strong>Personal:</strong> "Walk the dogs" - Daily for 30 minutes</p>
          <p><strong>Health:</strong> "Meditation" - Daily for 15 minutes</p>
          <p><strong>Hobby:</strong> "Read books" - 2 times a week for 45 minutes</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
