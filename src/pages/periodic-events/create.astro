---
import { actions } from 'astro:actions';
import { handlePeriodicEventsCreatePage } from '../../features/periodic-events/services/page-handler'; 
import Layout from '../../layouts/Layout.astro';
import PeriodicEventForm from '../../components/PeriodicEventForm.tsx';
import { Button } from '@/components/ui/button';
import ButtonLink from '@/components/ui/button-link';
import { Card, CardHeader, CardTitle, CardContent } from '@/components/ui/card';

const pageData = handlePeriodicEventsCreatePage(Astro);

const { formOptions, createdEvent, hasError, errorMessage } = pageData;
---

<Layout title="Create Periodic Event">
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="mb-4">
          <a 
            href="/periodic-events" 
            class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Periodic Events
          </a>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Create Periodic Event</h1>
        <p class="text-gray-600">
          Define activities you want to do regularly without specifying exact times
        </p>
      </div>

      <!-- Success/Error Messages -->
      {createdEvent && (
        <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-800">
          <h3 class="font-semibold">Event Created Successfully!</h3>
          <p>Your periodic event "{createdEvent.title}" has been created.</p>
          <div class="mt-3">
            <a 
              href="/periodic-events" 
              class="inline-flex items-center text-green-700 hover:text-green-900 font-medium"
            >
              View all periodic events
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      )}
      
      {hasError && (
        <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-800">
          <h3 class="font-semibold">Error</h3>
          <p>{errorMessage}</p>
        </div>
      )}

      <!-- Form -->
      <Card>
        <CardContent>
          <PeriodicEventForm 
            client:load
            formOptions={formOptions}
          />
        </CardContent>
      </Card>

      <!-- Examples -->
      <Card className="mt-8 bg-blue-50 border-blue-200">
        <CardHeader>
          <CardTitle className="text-lg text-blue-900">Examples</CardTitle>
        </CardHeader>
        
        <CardContent>
          <div class="space-y-2 text-sm text-blue-800">
            <p><strong>Exercise:</strong> "Go to the gym" - 3 times a week for 60 minutes</p>
            <p><strong>Personal:</strong> "Walk the dogs" - Daily for 30 minutes</p>
            <p><strong>Health:</strong> "Meditation" - Daily for 15 minutes</p>
            <p><strong>Hobby:</strong> "Read books" - 2 times a week for 45 minutes</p>
          </div>
        </CardContent>
      </Card>
    </div>
  </div>
</Layout>
