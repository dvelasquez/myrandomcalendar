  onEventClick: (event: CalendarEvent) => void;
  onDateSelect: (date: Date) => void;
  initialDate?: Date;
}

export function FullCalendar({ events, onEventClick, onDateSelect, initialDate }: FullCalendarProps) {
  // Pure presentation logic only
